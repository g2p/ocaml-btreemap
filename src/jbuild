(jbuild_version 1)

(library
    ((name btreemap)
     (public_name btreemap)
     (wrapped false)
     (ocamlc_flags (-g -linkall -dllpath . -dllib -lbtreemap_stubs -cclib -lpthread))
     (ocamlopt_flags (-g -linkall -cclib -lbtreemap_stubs -cclib -lpthread))
     (self_build_stubs_archive (btreemap))))

(rule
    ((targets (libbtreemap_stubs.a))
     (action (run cp ../../../target/debug/libbtreemap_stubs.a libbtreemap_stubs.a))))

(rule
    ((targets (dllbtreemap_stubs.so))
     (action (run cp ../../../target/debug/libbtreemap_stubs.so dllbtreemap_stubs.so))))
